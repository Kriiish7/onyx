#!/usr/bin/env bash
# Pre-commit hook for Onyx
# Runs formatting and linting before allowing commits

set -e

echo "ğŸ” Running pre-commit checks..."

# Check if cargo is installed
if ! command -v cargo &> /dev/null; then
    echo "âŒ cargo not found. Please install Rust."
    exit 1
fi

# Format check
echo "ğŸ“ Checking code formatting..."
if ! cargo fmt --all -- --check; then
    echo "âŒ Code formatting check failed!"
    echo "ğŸ’¡ Run 'cargo fmt --all' to fix formatting issues."
    exit 1
fi

# Clippy check
echo "ğŸ”§ Running clippy..."
if ! cargo clippy --all-targets --all-features -- -D warnings; then
    echo "âŒ Clippy found issues!"
    echo "ğŸ’¡ Fix the warnings and try again."
    exit 1
fi

# Run tests
echo "ğŸ§ª Running tests..."
if ! cargo test --quiet; then
    echo "âŒ Tests failed!"
    exit 1
fi

echo "âœ… All pre-commit checks passed!"
exit 0
